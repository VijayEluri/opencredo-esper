<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:esper="http://www.opencredo.com/schema/esper"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
						http://www.opencredo.com/schema/esper
						http://www.opencredo.com/schema/esper/spring-esper-1.0.xsd">

	<esper:template>
		<esper:statements>
			<esper:ref bean="testStatement" />
			<esper:ref bean="testStatement2" />
		</esper:statements>
	</esper:template>
	
	<esper:statement 
		id="testStatement" 
		epl="select count(*) as throughput from java.lang.Object.win:time_batch(1 second)">
		<esper:listeners>
			<bean class="org.opencredo.esper.sample.CallRecordingListener" />
		</esper:listeners>
	</esper:statement>
	
	<esper:statement 
		id="testStatement2" 
		epl="select count(*) as throughput from java.lang.Object.win:time_batch(1 second)">
		<esper:listeners>
			<bean class="org.opencredo.esper.sample.CallRecordingListener" />
		</esper:listeners>
	</esper:statement>
	
	
</beans>
