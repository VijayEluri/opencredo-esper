<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:esper="http://www.opencredo.com/schema/esper"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
						http://www.opencredo.com/schema/esper
						http://www.opencredo.com/schema/esper/opencredo-esper-2.0.xsd">

	<esper:template>
		<esper:statements>
			<esper:statement 
				epl="select * from org.opencredo.esper.sample.SampleEvent">
				<esper:listeners>
					<bean class="org.opencredo.esper.sample.CallRecordingListener" />
				</esper:listeners>
			</esper:statement>
			<esper:statement 
				epl="select * from org.opencredo.esper.sample.SampleEvent">
				<esper:listeners>
					<bean class="org.opencredo.esper.sample.CallRecordingListener" />
				</esper:listeners>
			</esper:statement>
		</esper:statements>
	</esper:template>
	
</beans>
